<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fixit.Controller.EmployeeController">

    <!-- Top Section: Header -->
    <top>
        <Pane prefHeight="60.0" style="-fx-background-color: #0097b2;" BorderPane.alignment="CENTER">
            <Label layoutX="20.0" layoutY="10.0" prefHeight="40.0" prefWidth="300.0" style="-fx-font-size: 24px; -fx-text-fill: white;" text="Admin Dashboard">
                <font>
                    <Font name="Arial Black" size="24.0" />
                </font>
            </Label>
            <Button fx:id="HomeButton" layoutX="598.0" layoutY="18.0" mnemonicParsing="false" onAction="#OnGoHomeClick" prefHeight="25.0" prefWidth="61.0" style="-fx-background-color: #e76f51; -fx-text-fill: white;" text="Home" />
            <Button fx:id="logoutButton" layoutX="677.0" layoutY="18.0" mnemonicParsing="false" onAction="#LogOut" prefHeight="25.0" prefWidth="62.0" style="-fx-background-color: #e76f51; -fx-text-fill: white;" text="Logout" />

        </Pane>
    </top>
    <!-- Left Section: Navigation Pane -->
    <left>
        <Pane prefWidth="150.0" style="-fx-background-color: #0097b2;" BorderPane.alignment="CENTER">
            <VBox alignment="TOP_CENTER" layoutY="20.0" spacing="20.0" />
        </Pane>
    </left>
    <center>

           <GridPane alignment="CENTER" hgap="10" vgap="10">

               <!-- Titre de l'incident -->
            <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="titleField" promptText="Enter Title" GridPane.columnIndex="1" GridPane.rowIndex="0" />

               <!-- Description de l'incident -->
            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextArea fx:id="descriptionField" promptText="Enter Description" GridPane.columnIndex="1" GridPane.rowIndex="1" />

               <!-- Type de l'incident -->
            <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="typeBox" promptText="Select Type" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Bug" />
                        <String fx:value="Feature Request" />
                        <String fx:value="Improvement" />
                    </FXCollections>
                </items>
            </ComboBox>

               <!-- PrioritÃ© -->
            <Label text="Priority:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="priorityBox" promptText="Select Priority" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Low" />
                        <String fx:value="Medium" />
                        <String fx:value="High" />
                        <String fx:value="Critical" />
                    </FXCollections>
                </items>
            </ComboBox>

               <!-- Statut -->
            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id="statusBox" promptText="Select Status" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="New" />
                        <String fx:value="In Progress" />
                        <String fx:value="Resolved" />
                        <String fx:value="Closed" />
                    </FXCollections>
                </items>
            </ComboBox>

   
   
               <!-- Bouton Enregistrer -->
            <Button onAction="#handleSaveIncident" text="Save Incident" GridPane.columnIndex="1" GridPane.rowIndex="12" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>
</BorderPane>
